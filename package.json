{
  "name": "very-blank-template",
  "version": "1.0.0",
  "description": "bare bones Node TypeScript template",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "start:dev": "nodemon dist/main.js",
    "start:watch": "concurrently \"npm:build:dev\", \"npm:start:dev\"",
    "format": "prettier --write .",
    "test": "jest --verbose --runInBand --testLocationInResults --detectOpenHandles",
    "test:watch": "jest --watch --verbose --runInBand --testLocationInResults --detectOpenHandles"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "author": "devon-wolf",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "concurrently": "^6.5.1",
    "electron": "^16.0.5",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
